---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText title="Contactate con nosotros!" />

  <ContactUs
    title="¡Comienza Tu Importación con Bike Equipments Argentina!"
    subtitle="Gracias por considerar a MotoParts Argentina como tu socio de confianza en importación de motopartes. Esperamos con ansias trabajar contigo."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario de contacto, reconoces y aceptas la recopilación de tu información personal.',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Estamos aqui para ayudar!"
    items={[
      // {
      //   title: 'Soporte general',
      //   description: `Chat with us for inquiries related to account management, website navigation, payment issues, accessing purchased templates or general questions about the website's functionality.`,
      // },
      // {
      //   title: 'Contacto de ventas',
      //   description:
      //     'Chat with us for questions about purchases, customization options, licensing for commercial use, inquiries about specific template, etc.',
      // },
      // {
      //   title: 'Soporte ',
      //   description:
      //     'Chat with us when facing issues like template installation, problems editing difficulties, compatibility issues with software or download errors, or other technical challenges related to using the templates.',
      // },
      {
        title: 'WhatsApp',
        description: '+54 9 11334433',
        icon: 'tabler:brand-whatsapp',
      },
      {
        title: 'Email',
        description: 'contact@support.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'Calle 1123, CABA, Argentina',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>


